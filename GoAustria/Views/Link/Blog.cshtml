                    </div>

                </div>
            </div>

        </div>
    </div>
</section>

<div class="panel panel-body container">
    @foreach (var model in Model)
    {
      


        <h3 class="text-center">@Html.DisplayFor(modelItem => model.Title)</h3>

        <br>

        @Html.Raw(model.Content)

        







    }
    @Html.PagedListPager(Model, page => Url.Action("Blog", new { page }))
</div>




