@using (var ctx = new ApplicationDbContext())
{
    foreach (var blog in ctx.Blogs)
    {
        <div class="panel panel-body container">


            <h3 class="text-center">@blog.Title</h3>
            Készítette: @blog.Author
            <br>

            @Html.Raw(@blog.Content)
            <input id="asd" type="text" value="@blog.Content" />

            <!--This is the textarea we will be replacing with a CKEditor instance-->
            <textarea id="Content" class="ckeditor"></textarea>

         


            <script type="text/javascript">


                $(document).ready(function () {
                    var x = document.getElementById("asd").value;
                    x.replace('\"\"', '\'\'');
                    $(function () {
                        $("#Content").html(x);
                    });


                });

            </script>

            <br />

            <a href="Generic/@blog.Id">

                Tovább a cíkhezz.
            </a>



        </div>
    }
}


