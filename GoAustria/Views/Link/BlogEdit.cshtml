@using (var ctx = new ApplicationDbContext())
{
    var blog = ctx.Blogs.Find(Convert.ToInt32(Url.RequestContext.RouteData.Values["id"]));

    <script>


    </script>

    <div class="panel panel-body container">

        <form>
           
            <div class="form-group">
                <label for="editTitle">Title</label>
                <input type="text" value="@blog.Title" class="form-control" id="editTitle" placeholder="Title">
            </div>
            <div class="form-group">
                <label for="editActive">Active</label>
                @if (@blog.Active == true)
                {
                    <input type="checkbox" checked id="myCheck">
                }
                else
                {
                    <input type="checkbox" id="myCheck">
                }

            </div>
            <div class="form-group">
                <label for="editContent"> </label>
                <textarea id="editContent" class="ckeditor"></textarea>
            </div>
            <div class="form-group text-right">
                <button type="button" class="btn btn-primary" id="editBlog">Mentés</button>
                <button type="button" class="btn btn-primary" id="close">Mégse</button>
            </div>
        </form>


        <input style="visibility: collapse;" id="asd" type="text" value="@blog.Content" />

        <script type="text/javascript">
            $('#close').click(function () {
                location.href = '/BlogAdmin';
            });
           

            $('#editBlog').click(function () {
                var checkBox = document.getElementById("myCheck");
                var truefalse = "";
                if (checkBox.checked == true) {
                    truefalse = "true";
                } else {
                    truefalse = "false";
                }

                    console.log($('#editContent').val())
                    
                    var editedBlog = {
                        Id: $('#editId').val(),
                        Title: $('#editTitle').val(),
                        Author: $('#editAuthor').val(),
                        Content: CKEDITOR.instances.editContent.getData(),
                        Active: truefalse

                    };
                    console.log(editedBlog.Id)





                    $.ajax({
                        url: '/api/blogedit/' + editedBlog.Id,
                        type: 'PUT',
                        data: editedBlog,
                        success: function (result) {
                            alert("mentve")
                        }
                    });
                });


                var x = document.getElementById("asd").value;
                x.replace('\"\"', '\'\'');
                console.log("beleír");
                $(function () {
                    $("#editContent").html(x);
                });








         

        </script>



        <br />


    </div>

}



