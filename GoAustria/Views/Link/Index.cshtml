		var step = 0;
		var paymentMethod;

		function changeQty() {
			var qty = $('#orderQty').val();

			$('#price1').html((qty * 3990) + ' Ft');
			$('#price2').html((qty * 3990) + ' Ft');

			$('#resultQty').html(qty + '');
			$('#resultPrice1').html((qty * 3990) + ' Ft');
			$('#resultPrice2').html((qty * 3990) + ' Ft');

