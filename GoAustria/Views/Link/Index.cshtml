				InvPhone: $('#invPhone').val(),
				InvTaxNum: $('#invTaxNum').val(),
				PaymentMethod: paymentMethod,
				PostalFee: paymentMethod == 1 ? 990 : 1380,
				Comment: $('#comment').val()

			};

			$.ajax({
				url: 'api/orders/',
				type: 'POST',
				data: newOrder,
				success: function (result) {
					$('#final_step').css('display', '');
					$('#prevBtn').css('display', 'none');
					$('#nextBtn').css('display', 'none');
