				error: function (request, status, error) {
					$('#final_step').css('display', 'none');
					$('#errorMsg').html('Sikertelen rendelés!');
					$('#errorMsg').css('display', '');
					$('#prevBtn').css('display', 'none');
					$('#nextBtn').css('display', 'none');

				}
			});
		}


